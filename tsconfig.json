{
  "files": [
    "index.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  }
}
