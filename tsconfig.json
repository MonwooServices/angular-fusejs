{
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es2015",
    "es2017",
    "esnext",
    "dom"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": false,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }  
}
