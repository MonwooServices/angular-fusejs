{
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es2015",
    "es2017",
    "esnext",
    "dom"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  }
}
